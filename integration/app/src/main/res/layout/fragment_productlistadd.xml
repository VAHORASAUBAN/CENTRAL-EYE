<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        app:title="Inventory Management"
        app:titleTextColor="@android:color/white" />

    <!-- Search EditText below the toolbar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="16dp"
        android:hint="Search..."
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:inputType="text" />

    <!-- Title for recently added products -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_margin="16dp"
        android:text="Products"
        android:drawableLeft="@drawable/baseline_transform_24"

        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Product 1 Container -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/product1CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:layout_below="@id/titleTextView"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/productImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_person_24"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circular_background"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productNameTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addCpuTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productBarcodeTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barcode"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addbarcodeTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A2009"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productidTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addidTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="009"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/viewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#4CAF50"
                android:text="View"
                android:textColor="#FFFFFF"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Product 2 Container -->
    <LinearLayout
        android:id="@+id/product2Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product1Container"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border_rect"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circular_background"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productNameTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product 2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addCpuTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productBarcodeTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barcode"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addbarcodeTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B2010"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productidTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addidTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/viewButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#4CAF50"
            android:text="View"
            android:textColor="#FFFFFF"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Product 3 Container -->
    <LinearLayout
        android:id="@+id/product3Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product2Container"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border_rect"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/productImage3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circular_background"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productNameTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product 3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addCpuTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productBarcodeTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barcode"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addbarcodeTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2011"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productidTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addidTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="011"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/viewButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#4CAF50"
            android:text="View"
            android:textColor="#FFFFFF"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Product 4 Container -->
    <LinearLayout
        android:id="@+id/product4Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product3Container"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border_rect"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/productImage4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circular_background"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productNameTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product 4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addCpuTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productBarcodeTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barcode"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addbarcodeTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D2012"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productidTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addidTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="012"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/viewButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#4CAF50"
            android:text="Add a Barcode"
            android:textColor="#FFFFFF"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>

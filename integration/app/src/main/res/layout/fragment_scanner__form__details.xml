<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Inventory Management"
        app:titleTextColor="@android:color/white" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="16dp"
        android:text="Add Assets"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:drawableLeft="@drawable/baseline_add_circle_outline_24"
        android:drawablePadding="12dp" />

    <!-- Main content layout with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp">

            <!-- Card layout for asset form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#F9F9F9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Asset_ID Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asset ID:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Asset ID"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:contentDescription="Asset ID Input Field"/>

                    <!-- Asset_Type Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asset Type:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Asset Type"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:contentDescription="Asset Type Input Field"/>

                    <!-- Model_name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model Name:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Model Name"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:contentDescription="Model Name Input Field"/>

                    <!-- Serial_Number Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serial Number:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:id="@+id/barcodeTextView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Serial Number"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:editable="false"
                        android:textColor="#212121"
                        android:contentDescription="Serial Number Input Field"/>

                    <!-- purchase_date Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Date:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <EditText
                        android:id="@+id/purchaseDateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Purchase Date"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:focusable="false"
                        android:clickable="true"
                        android:contentDescription="Purchase Date Input Field" />
                    <!-- Asset_Value Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asset Value:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Asset Value"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:contentDescription="Asset Value Input Field"/>

                    <!-- Condition Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Condition"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:contentDescription="Condition Input Field"/>




                    <!-- Add Button -->
                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:textSize="18sp"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="20dp"
                        android:padding="14dp"
                        android:contentDescription="Add Asset Button"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Inventory Management"
        app:titleTextColor="@android:color/white" />

    <!-- Search Box -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="16dp"
        android:hint="Search..."
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:inputType="text" />

    <!-- Recently Added Products Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_margin="16dp"
        android:text="Recently Added Products"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- TableLayout for Products -->
    <TableLayout
        android:id="@+id/productTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_margin="16dp"
        android:stretchColumns="1"
        android:background="@android:color/white">

        <!-- Table Header -->
        <TableRow android:background="@color/primary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcode"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </TableRow>

        <!-- Product 1 -->
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_24"
                android:layout_gravity="center"
                android:background="@drawable/circular_background"
                android:clipToOutline="true"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/productNameTextView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="CPU" />

            <TextView
                android:id="@+id/productBarcodeTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="A2009" />

            <TextView
                android:id="@+id/productIdTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="009"
                android:padding="8dp" />
        </TableRow>

        <!-- Product 2 -->
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_24"
                android:layout_gravity="center"
                android:background="@drawable/circular_background"
                android:clipToOutline="true"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/productNameTextView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="RAM" />

            <TextView
                android:id="@+id/productBarcodeTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B4012"
                android:padding="8dp" />

            <TextView
                android:id="@+id/productIdTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="012"
                android:padding="8dp" />
        </TableRow>

        <!-- Product 3 -->
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_24"
                android:layout_gravity="center"
                android:background="@drawable/circular_background"
                android:clipToOutline="true"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/productNameTextView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="SSD" />

            <TextView
                android:id="@+id/productBarcodeTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C3005"
                android:padding="8dp" />

            <TextView
                android:id="@+id/productIdTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="005"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <!-- Bottom Container -->
    <RelativeLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_border_rect"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- First Box -->
        <LinearLayout
            android:id="@+id/squareBox1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_sync_problem_24"
                android:contentDescription="Icon 1" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
        <!-- Second Box -->
        <LinearLayout
            android:id="@+id/squareBox2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_toEndOf="@id/squareBox1"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_info_outline_24"
                android:contentDescription="Icon 2" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
